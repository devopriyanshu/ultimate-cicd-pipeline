pipeline {
  agent {
    docker {
      image 'devopriyanshu/maven-docker-java17-agent:v6'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  stages {

    stage('Verify Environment') {
      steps {
        sh 'java -version'
        sh 'mvn -version'
      }
    }

    stage('Checkout') {
      steps {
        sh 'echo "Code checkout passed"'
      }
    }

    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        sh 'cd spring-boot-app && mvn clean package'
      }
    }

    // ðŸ‘‡ Run only this stage in a Java 17 container
    stage('Static Code Analysis (SonarQube with Java 17)') {
      agent {
        docker {
          image 'maven:3.9.6-eclipse-temurin-17'
          args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      environment {
        SONAR_URL = "http://54.157.190.188:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd spring-boot-app
            java -version
            mvn -version
            mvn sonar:sonar \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "devopriyanshu/ultimate-cicd:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
          sh 'cd spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            dockerImage.push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "ultimate-cicd-pipeline"
        GIT_USER_NAME = "devopriyanshu"
      }
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "priyanshupatel1902@gmail.com"
            git config user.name "priyanshu patel"
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" k8s/deployment.yml
            git add k8s/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }

  }
}
