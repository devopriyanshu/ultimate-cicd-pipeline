pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "devopriyanshu/ultimate-cicd:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
    }

    stages {
        stage('Verify Environment') {
            steps {
                sh 'java -version || true'
                sh 'mvn -version || true'
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/devopriyanshu/ultimate-cicd-pipeline.git'
            }
        }

        stage('Build App (in Maven container)') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-17'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                sh '''
                cd spring-boot-app
                mvn clean package -DskipTests
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                cd spring-boot-app
                docker build -t $DOCKER_IMAGE .
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                        def appImage = docker.image("${DOCKER_IMAGE}")
                        appImage.push()
                    }
                }
            }
        }

        stage('Deploy (Optional)') {
            steps {
                echo "Deployment placeholder — integrate K8s or ECS next."
            }
        }
    }

    post {
        success {
            echo "✅ Build & Push successful! Image: $DOCKER_IMAGE"
        }
        failure {
            echo "❌ Build failed. Check logs."
        }
    }
}
